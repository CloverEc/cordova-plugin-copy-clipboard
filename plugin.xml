<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-copy-clipboard" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>CopyClipboard</name>
    <js-module name="CopyClipboard" src="www/CopyClipboard.js">
        <clobbers target="cordova.plugins.CopyClipboard" />
    </js-module>
    <platform name="android">
      <config-file target="config.xml" parent="/*">
        <feature name="CopyClipboard">
          <param name="android-package" value="plugin.copyclipboard.CopyClipboard"/>
        </feature>
      </config-file>
      <source-file src="src/android/CopyClipboard.java" target-dir="src/plugin/copyclipboard/"/>
    </platform>
</plugin>
